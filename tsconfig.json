{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "module": "esnext",
    "moduleResolution": "node",
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "target": "es5",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "build",
    "lib": ["es2017", "dom"],
    "rootDir": ".",
    "baseUrl": "."
  },
  "include": ["./src/**/*"],
  "exclude": ["./node_modules/**/*"]
}
